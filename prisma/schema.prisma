model Movie {
  id          String      @id @default(cuid())
  title       String
  duration    Int
  language    String
  subtitles   String?
  director    String
  actors      String[]
  minAge      Int?
  poster      Bytes?      @db.ByteA
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  screenings  Screening[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
} 